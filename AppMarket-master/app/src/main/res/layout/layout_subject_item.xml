<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_item_bg"
        android:orientation="vertical">

        <com.example.admin.appmarket.widget.RatioLayout xmlns:appmarket="http://schemas.android.com/apk/res/com.example.admin.appmarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            appmarket:ratio="2.43">

            <ImageView
                android:id="@+id/subject_item_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.example.admin.appmarket.widget.RatioLayout>

        <TextView
            android:id="@+id/subject_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述"
            android:textColor="@color/text_color"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>